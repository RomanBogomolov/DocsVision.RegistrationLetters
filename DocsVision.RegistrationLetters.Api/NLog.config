<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <variable name="myvar" value="myvalue"/>
  
  <targets>
    <target xsi:type="Trace" name="traceLogger"/>
    <target xsi:type="File" name="letterErrorLogger" fileName="RegistrationLetters.ErrorLog"/>
    <target xsi:type="File" name="letterMainLogger" fileName="RegistrationLetters.MainLog"/>
  </targets>

  <rules>
    <logger minlevel="Trace" writeTo="traceLogger" />
    <logger minlevel="Error" writeTo="letterErrorLogger" />
    <logger minlevel="Info" writeTo="letterMainLogger" />
  </rules>
</nlog>
